{
  // "extends": "../../packages/typescript-config/react-router.json",
  "include": [
    "app/**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "public/build",
    "app/__tests__/**/*",
    "vitest.config.ts"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },

    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "allowJs": true,
    "isolatedModules": true
  }
}
